{
  "id": "com.athom.nhc",
  "version": "0.0.4",
  "compatibility": ">=0.0.1",
  "sdk": 2,
  "name": {
    "en": "NHC - Niko Home Control"
  },
  "tags": {
    "en": [
      "light",
      "switch",
      "dimmer",
      "nhc"
    ]
  },
  "description": {
    "en": "Adds support for Niko Home Control V1, connects with the nhc ip module through tcp"
  },
  "category": [
    "lights"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Ayrton Sinnaeve",
    "email": "ayrton.sinnaeve@gmail.com"
  },
  "drivers": [
    {
      "id": "nhc_driver",
      "name": {
        "en": "nhc lights"
      },
      "class": "light",
      "capabilities": [
        "dim",
        "onoff"
      ],
      "images": {
        "large": "/drivers/nhc_driver/assets/images/large.png",
        "small": "/drivers/nhc_driver/assets/images/small.png"
      },
      "pair": [
        {
          "id": "pair"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings"
          },
          "children": [
            {
              "id": "ip",
              "type": "text",
              "label": {
                "en": "ip address niko controller"
              },
              "value": "192.168.1.3",
              "hint": {
                "en": "You can find this either in your router or the NHC app, go to settings, info, system info, and look under niko home control status -> ip"
              }
            }
          ]
        }
      ]
    }
  ]
}