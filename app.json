{
  "id": "com.athom.nhc",
  "version": "0.1.0",
  "compatibility": ">=0.0.1",
  "sdk": 2,
  "name": {
    "en": "NHC - Niko Home Control"
  },
  "tags": {
    "en": [
      "light",
      "switch",
      "dimmer",
      "nhc",
      "thermostat"
    ]
  },
  "description": {
    "en": "Adds support for Niko Home Control V1, connects with the nhc ip module through tcp"
  },
  "category": [
    "lights",
    "climate"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Ayrton Sinnaeve",
    "email": "ayrton.sinnaeve@gmail.com"
  },
  "drivers": [
    {
      "id": "nhc_driver",
      "name": {
        "en": "nhc lights"
      },
      "class": "light",
      "capabilities": [
        "dim",
        "onoff"
      ],
      "images": {
        "large": "/drivers/nhc_driver/assets/images/large.png",
        "small": "/drivers/nhc_driver/assets/images/small.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "thermostat",
      "name": {
        "en": "thermostat"
      },
      "class": "thermostat",
      "capabilities": ["thermostat_mode", "target_temperature", "measure_temperature"],
      "images": {
        "large": "/drivers/thermostat/assets/images/large.png",
        "small": "/drivers/thermostat/assets/images/small.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ]
    }
  ]
}